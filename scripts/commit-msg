#!/bin/sh
# Удаляет из сообщения коммита строки с подписью Cursor.
# Установка: скопировать в .git/hooks/commit-msg и сделать исполняемым (chmod +x).
COMMIT_MSG_FILE="$1"
if [ -f "$COMMIT_MSG_FILE" ]; then
  grep -v "Made-with" "$COMMIT_MSG_FILE" | grep -v "Made with Cursor" > "${COMMIT_MSG_FILE}.tmp"
  mv "${COMMIT_MSG_FILE}.tmp" "$COMMIT_MSG_FILE"
fi
exit 0
